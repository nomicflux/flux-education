name:                Flux
version:             0.1.0.0
-- synopsis:            
-- description:         
license:             MIT
license-file:        LICENSE
author:              Michael Anderson
maintainer:          nomicflux@gmail.com
-- copyright:           
category:            Web
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

executable Flux
  main-is:             Main.hs
  other-modules:       Config
                     , Models
                     , Api
  other-extensions:    DataKinds, TypeOperators, TemplateHaskell, QuasiQuotes, EmptyDataDecls, FlexibleContexts, FlexibleInstances, GADTs, GeneralizedNewtypeDeriving, MultiParamTypeClasses, OverloadedStrings, TypeFamilies, RecordWildCards, DeriveGeneric
  
  build-depends:       base >=4.7 && <4.8
                     , mtl >=2.1 && <2.2
                     , wai >=3.0 && <3.1
                     , aeson >=0.8 && <0.9
                     , warp >=3.1 && <3.2
                     , wai-extra >=3.0 && <3.1
                     , monad-logger >=0.3 && <0.4
                     , servant >= 0.4 && < 0.5
                     , servant-server >= 0.4 && < 0.5
                     , persistent-template >=2.1 && <2.2
                     , persistent >= 2.1 && < 2.2
                     , persistent-postgresql >= 2.1 && < 2.2
                     , either >= 4.3 && < 4.4

  hs-source-dirs:      src
  default-language:    Haskell2010
